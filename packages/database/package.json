{
  "name": "@org/database",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun docker:up && bun drizzle-kit studio --port=7000 --config=./drizzle.config.ts",
    "preview": "bun docker:up && bun drizzle-kit studio --port=7000 --config=./drizzle.config.ts",
    "db:generate": "drizzle-kit generate --config=./drizzle.config.ts",
    "db:migrate": "bun run ./migrate.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:kill": "docker compose down --volumes --remove-orphans",
    "type:check": "tsc --noEmit"
  },
  "dependencies": {
    "@org/validation": "workspace:*",
    "drizzle-orm": "0.45.0"
  },
  "devDependencies": {
    "@org/tsconfig": "workspace:*",
    "drizzle-kit": "0.31.8",
    "pg": "8.16.3"
  }
}
